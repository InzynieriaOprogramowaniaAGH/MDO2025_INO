FROM ubuntu:20.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies for building xz
RUN apt-get update && \
    apt-get install -y \
    git \
    autoconf \
    automake \
    libtool \
    gettext \
    autopoint \
    build-essential \
    make \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /build
