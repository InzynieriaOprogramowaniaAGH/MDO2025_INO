# Dockerfile.build
FROM debian:bullseye

WORKDIR /app

COPY xz/ ./

RUN apt-get update && apt-get install -y \
      build-essential autoconf automake libtool gettext pkg-config \
    && rm -rf /var/lib/apt/lists/* \
    && ./configure \
    && make -j"$(nproc)" dist \
    && mv xz-*.tar.gz xz.tar.gz
