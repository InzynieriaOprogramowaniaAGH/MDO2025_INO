pipeline {
    agent any

    environment {
        IMAGE_NAME = "node-app:latest"
        WORKDIR = 'ITE/GCL06/DR416985/lab5'
        NETWORK_NAME = 'my_network'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir("${WORKDIR}") {
                    sh "docker build -t ${IMAGE_NAME} -f node-build.Dockerfile ."
                }
            }
        }

        stage('Test') {
            steps {
                dir("${WORKDIR}") {
                    sh "docker build -t node-app-test -f node-test.Dockerfile ."
                    sh "docker run --rm node-app-test"
                }
            }
        }

        stage('Deploy') {
            steps {
                dir("${WORKDIR}") {
                    // Tworzymy sieć tylko jeśli nie istnieje
                    sh "docker network inspect ${NETWORK_NAME} >/dev/null 2>&1 || docker network create ${NETWORK_NAME}"
                    sh "docker build -t node-app-deploy -f node-deploy.Dockerfile ."
                    sh "docker rm -f app || true"
                    sh "docker run -d --name app -p 3000:3000 node-app-deploy"
                }
            }
        }

        stage('Verify') {
            steps {
                sh 'sleep 5'
                sh "docker run --rm --network ${NETWORK_NAME} curlimages/curl curl -f http://app:3000"
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline zakończony sukcesem.'
        }
        failure {
            echo '❌ Pipeline zakończony niepowodzeniem.'
        }
    }
}
