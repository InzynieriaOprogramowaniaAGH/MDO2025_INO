pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                script {
                    cleanWs()
                    sh 'docker system prune -af --volumes'
                }
            }
        }
        
        stage('Clone repo') {
            steps {
                sh "git clone -b MP416297 --single-branch https://github.com/InzynieriaOprogramowaniaAGH/MDO2025_INO.git "
                sh "pwd"
                sh "ls"
            }
        }
        
        stage('Build') {
            steps{
                // sh "docker build -t supertuxbld -f ./MDO2025_INO/ITE/GCL06/MP416297/Sprawozdanie2/supertux_dockerfiles/Dockerfile.bld ."
                sh "docker load -i ./MDO2025_INO/ITE/GCL06/MP416297/Sprawozdanie2/supertux_dockerfiles/supertuxbld.tar"
            }
        }
        
        stage('Test') {
            steps{
                sh "docker build -t supertuxtest -f ./MDO2025_INO/ITE/GCL06/MP416297/Sprawozdanie2/supertux_dockerfiles/Dockerfile.test ."
            }
        }
        
        stage('Deploy') {
            steps {
                script{
                    sh "docker volume create supertux_build"
                    sh '''
                        docker run --rm -v supertux_build:/supertux_build supertuxbld bash -c "
                            cd ../../ && 
                            rm -rf supertux_build/* &&
                            cp -r supertux/build supertux_build/build
                            cp -r supertux/data supertux_build/data
                            cp -r supertux/external supertux_build/external
                        "
                    '''

                    sh "docker build -t main_container -f ./MDO2025_INO/ITE/GCL06/MP416297/Sprawozdanie2/supertux_dockerfiles/Dockerfile.maincontainer ."
                    sh '''
                            docker run --name main -v supertux_build:/supertux_build main_container bash -c "
                                mkdir supertux &&
                                cp -r supertux_build/* ./supertux/ &&
                                cd supertux &&
                                cd build &&
                                ./supertux2 --version"
                    '''
                    def logs = sh(script: "docker logs main", returnStdout: true).trim()
                        
                    // Wyświetlenie logów w konsoli Jenkins
                    echo "Docker logs: ${logs}"
                    
                    // Usunięcie kontenera po zakończeniu
                    sh 'docker rm main'
                }
                
            }
        }

        stage('Build DEB Package') {
            steps {
                script {
                    // Tworzenie struktury katalogów dla paczki DEB
                    sh '''
                        mkdir -p ${DEB_DIR}/usr/local/bin/supertux/build
                        mkdir -p ${DEB_DIR}/usr/local/bin/supertux/data
                        mkdir -p ${DEB_DIR}/usr/local/bin/supertux/external
                        
                        # Kopiowanie katalogów z woluminu supertux_build do odpowiednich miejsc w paczce DEB
                        cp -r /supertux_build/supertux/build/* ${DEB_DIR}/usr/local/bin/supertux/build/
                        cp -r /supertux_build/supertux/data/* ${DEB_DIR}/usr/local/bin/supertux/data/
                        cp -r /supertux_build/supertux/external/* ${DEB_DIR}/usr/local/bin/supertux/external/

                        # Tworzenie katalogu DEBIAN i pliku kontrolnego
                        mkdir -p ${DEB_DIR}/DEBIAN
                        echo "Package: ${PACKAGE_NAME}\nVersion: ${PACKAGE_VERSION}\nArchitecture: all\nMaintainer: Twoje Imię <twoj_email@example.com>\nInstalled-Size: 1024\nDepends: cmake, build-essential, libogg-dev, libvorbis-dev, libopenal-dev, libsdl2-dev, libsdl2-image-dev, libfreetype6-dev, libraqm-dev, libcurl4-openssl-dev, libglew-dev, libharfbuzz-dev, libfribidi-dev, libglm-dev, zlib1g-dev\nSection: utils\nPriority: optional\nDescription: SuperTux - gra platformowa" > ${DEB_DIR}/DEBIAN/control

                        # Tworzenie skryptu postinst, który zainstaluje wymagane zależności
                        echo "#!/bin/bash\n\napt-get update\napt-get install -y cmake build-essential libogg-dev libvorbis-dev libopenal-dev libsdl2-dev libsdl2-image-dev libfreetype6-dev libraqm-dev libcurl4-openssl-dev libglew-dev libharfbuzz-dev libfribidi-dev libglm-dev zlib1g-dev" > ${DEB_DIR}/DEBIAN/postinst
                        chmod +x ${DEB_DIR}/DEBIAN/postinst

                        # Tworzenie paczki DEB
                        dpkg-deb --build ${DEB_DIR}
                    '''
                }
            }
        }

        stage('Publish DEB Package') {
            steps {
                script {
                    // Publikowanie paczki DEB jako artefakt
                    archiveArtifacts artifacts: "${DEB_DIR}.deb", allowEmptyArchive: false
                }
            }
        }
        
        // stage('Publish') {
        //     steps {
        //         script {
        //             def artifactName = "supertux_deploy_${currentBuild.timestamp}.zip"
                    
        //             archiveArtifacts artifacts: artifactName, allowEmptyArchive: false
        //         }
        //     }
        // }
    }
}

